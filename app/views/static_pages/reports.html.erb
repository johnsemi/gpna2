<% provide(:title, 'Reports') %>
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<!DOCTYPE html>
<html>
  <head>
   
  </head>
  <body>
    <h1>Reports</h1>
   <div class="container-fluid">
  <div class="row-fluid">
    <h3>Donation Totals</h3>
    </div>
    <div class="row-fluid">
    <div class="span6">

	<h2>Yearly Donations</h2>
      <table class="table table-condensed">
      <% @yearly_donations_sum.each do |year, total| %>
	  <tr>
	    <td> <%= year %> </td>
	    <td> <%= total %></td>
	  </tr>
	<% end %>
       </table>
       </div>

	<div class="span6">
    <%= column_chart yearly_donations_chart_path, colors: ["#449BF3","#6C9C0E","#9B4379","#CD4536"] %>
    </div>
    </div>
  <div class="row-fluid">
    <h2>Monthly Donations</h2>
      <table class="table table-condensed">
      <% @monthly_donations_sum.each do |month, total| %>
	  <tr>
	    <td> <%= month %> </td>
	    <td> <%= total %></td>
	  </tr>
	<% end %>
       </table>
       </div>

  <div class="row-fluid">
  <h3>Member Stats</h3>
  </div>
    <div class="row-fluid">
  <div class="span6">
    <h2>Member Types</h2>

    <%= pie_chart member_types_chart_path, colors: ["#449BF3","#6C9C0E","#9B4379","#CD4536"] %>
    </div>
    <div class="span6">
    <h2>New Members per Year</h2>
    <%= column_chart yearly_members_chart_path, colors: ["#449BF3","#6C9C0E","#9B4379","#CD4536"] %>
</div>
</div>

	<%= @yearly_donations_sum %>
</div>
</div>
  </body>
</html>