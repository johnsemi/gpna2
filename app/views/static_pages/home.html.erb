<% provide(:title, 'Home') %>
<!DOCTYPE html>
<html>
  <head>
    <title>GPNA Membership | Home</title>
  </head>
  <body>
  <div class="container-fluid">
  <div class="row-fluid">
    <h1>GPNA Membership Site</h1>
       <h3>Blah blah blah blah. </h3>
       <p>
       Total Members: <%= @totalMembers %></br>
  	   YTD New Members: <%= @YTDMembers.count %></br>
  	   YTD Donations: <%= @YTDDonations.sum('amount') %></br>
    	</p>
      </br>
      </div>
      <div class="row-fluid">

      <div class="span6">
      <h3>Newest Members</h3>
      <table class="table table-responsive">
      <tr>
      <th>Member</th>
      <th>Join Date</th>
      </tr>
      <% @newMembers.each do |mem| %>
  		<tr>
  		   <td><%= mem.display_name %></td>
  		   <td><%= mem.joindate %></td>
  		</tr>
	  <% end %>
       </table>
       </div>

      <div class="span6">
       <h3>Upcoming Events</h3>
       <table class="table table-responsive">
      <tr>
      <th>Event</th>
      <th>Date</th>
      </tr>
      <% @upcomingEvents.each do |evt| %>
  		<tr>
  		   <td><%= evt.eventtitle %> </td>
  		   <td><%= evt.eventdate.strftime("%B %e") %> </td>
  		</tr>
	  <% end %>
       </table>
       </div>
         <div class="clearfix visible-xs"></div>

       </div>
    </div>
  </body>
</html>