<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :eventtitle, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :eventtitle, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :eventlocation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :eventlocation, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label :eventdate, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :eventdate, :class => 'text_field', 'data-behaviour' => 'datepicker' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :eventdescription, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :eventdescription, :class => 'text_area' %>
    </div>
  </div>

  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>

