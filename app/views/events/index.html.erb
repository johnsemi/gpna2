<%- model_class = Event -%>
<% provide(:title, 'Events') %>
<div class="row-fluid">
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
</div>
<div class="row-fluid">
<div class="span10 offset1">
<%= link_to('New Event', new_event_path, class: 'btn btn-primary') %>
</div>
</div>
<div class="row-fluid">
<div class="span10 offset1">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:eventtitle) %></th>
      <th><%= model_class.human_attribute_name(:eventlocation) %></th>
      <th><%= model_class.human_attribute_name(:eventdate) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.eventtitle, event_path(event) %></td>
        <td><%= event.eventlocation %></td>
        <td><%= event.eventdate %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_event_path(event), :class => 'btn btn-mini btn-info' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<div class="row-fluid">
<div class="span6 offset3">
<div id='calendar'></div>
</div>
</div>