<%- model_class = Event -%>
<div class="page-header">
  <!--<h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>-->
  <h1><%= @event.eventtitle %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:eventtitle) %>:</strong></dt>
  <dd><%= @event.eventtitle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:eventlocation) %>:</strong></dt>
  <dd><%= @event.eventlocation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:eventdate) %>:</strong></dt>
  <dd><%= @event.eventdate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:eventdescription) %>:</strong></dt>
  <dd><%= @event.eventdescription %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn btn-info' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
