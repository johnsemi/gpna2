<%= form_for [@member, @donation], :html => { :class => 'form-horizontal'} do |f| %>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label :donationdate, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :donationdate, :class => 'text_field', 'data-behaviour' => 'datepicker' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :note, :class => 'text_field' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                member_path(@member), :class => 'btn' %>
  </div>
<% end %>