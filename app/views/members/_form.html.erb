<%= simple_form_for(@member, html: {class: 'form-horizontal' }) do |f| %>

    <%= f.input :membertype, collection: Member::MEMBER_TYPES, :include_blank => false, input_html: { id: 'memselect', onchange: "updateMemberType()" } %>

    <%= f.input :firstname, label_html: { id: 'namelabel'} %>
   
   <%= f.input :lastname, label_html: { id: 'lnamelabel'}  %>

   <div class="toHide">
   <%= f.input :orgname, label_html: { id: 'orglabel'} %>
   </div>

  <%= f.input :joindate, :as => :string, :input_html => { data: {behaviour: "datepicker"} }, label_html: {id: 'datepicker'}  %>
  
  <%= f.input :address1 %>

  <%= f.input :address2 %>

 <%= f.input :city %>

 <%= f.input :state, collection: us_states %>

 <%= f.input :zip, input_html: { id: 'zip' } %>
 
  <%= f.input :phone, input_html: { id: 'phone' } %>

  <%= f.input :email, as: :email %>

<%= f.input :subscribe, as: :boolean %>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                members_path, :class => 'btn' %>
  </div>
<% end %>

